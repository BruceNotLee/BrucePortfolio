<div class="row center">
  <div class="col s12 m6 l4 xl3">
    <% item = @portfolio_item %>
    <%= image_tag item.main_image unless item.thumb_image.nil? %>
    <h3><%= item.title %></h3>
    <h5><%= item.subtitle %></h5>
    <p><%= item.body %></p>
    <p class="left-align"><%= link_to "Edit #{item.title}", edit_portfolio_path(item.id) %></p>
  </div>
</div>
