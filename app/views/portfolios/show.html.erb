<% item = @portfolio_item %>
  <%= image_tag item.main_image unless item.thumb_image.nil? %>
  <h3><%= item.title %></h3>
  <h5><%= item.subtitle %></h5>
  <p><%= item.body %></p>
  <p><%= link_to "Edit", edit_portfolio_path(item) %>
    <%= link_to "Delete", portfolio_path(item), method: :delete, data: { confirm: "Are you sure?"} %>
  </p>
  <h5>Technologies Used</h5>
  <% item.technologies.each do |t| %>
    <p><%= t.name %></p>
  <% end %>
