<tr>
  <td><%= link_to blog.title, blog %></td>
  <td><%= blog.body %></td>
  <td><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</td>
  <td>
    <%= link_to blog.status, toggle_status_blog_path(blog) %>
    <%= link_to 'Edit', edit_blog_path(blog) %>
    <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
