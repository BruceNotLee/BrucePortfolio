<p><%= link_to blog.title, blog %>
<%= blog.body %></p>

<%= link_to blog.status, toggle_status_blog_path(blog) %>
<%= link_to 'Edit', edit_blog_path(blog), :class => "crud" if logged_in?(:site_admin) %>
<%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, :class => "crud" if logged_in?(:site_admin) %>
<p>Created <%= distance_of_time_in_words(blog.created_at, Time.now) %>
ago</p>
